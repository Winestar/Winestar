<h1>Sign Up</h1>

<%= form_for (@user) do |f| %>
<%= f.text_field :first_name, placeholder: "First Name" %><br>
<%= f.text_field :last_name, placeholder: "Last Name" %><br>
<%= f.text_field :phone_number, placeholder: "Phone Number" %><br>
<%= f.text_field :email, placeholder: "Email" %><br>
<%= f.password_field :password, placeholder: "Password" %><br>

<!-- radio button -->
  <div class="field">
    <%= f.label :contact_me_with %><br />

    <%= f.label :contact_email, "Email" %>
    <%= f.radio_button :contact_email, :Email if :checked %>

    <%= f.label :contact_text, "Text" %>
    <%= f.radio_button :contact_text, :Text if :checked %>
  </div>
  

<%= f.submit "Sign Up" %>

<% end %> 

